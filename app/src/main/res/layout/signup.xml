<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logo2"
            android:background="@drawable/circle_shadow"
            android:contentDescription="@string/walletzen_logo"
            android:elevation="12dp" />

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/gradient_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Your Account"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join WalletZen for smarter finance"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:textColor="#0D0D0D"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Username -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="#F5F6F8"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etSignupUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your username"
            android:inputType="text"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:background="@drawable/edit_text_3d"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="#F5F6F8"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etSignupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:background="@drawable/edit_text_3d"
            android:layout_marginBottom="16dp" />

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="#F5F6F8"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etSignupPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:background="@drawable/edit_text_3d"
            android:layout_marginBottom="16dp" />

        <!-- Confirm Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="#F5F6F8"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-enter your password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:background="@drawable/edit_text_3d"
            android:layout_marginBottom="24dp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="@drawable/btn_style_primary"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:layout_marginTop="8dp"
            android:padding="12dp" />

        <!-- Back to Login Button -->
        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:background="@drawable/btn_style_secondary"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:layout_marginTop="12dp"
            android:padding="12dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
